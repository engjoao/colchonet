<h1>Lista de quartos</h1>

<table>
  <thead>
    <tr>
      <th><%= t('room.title') %></th>
      <th><%= t('room.location') %></th>
      <th><%= t('room.description') %></th>
      <th><%= t('room.text') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= room.text %></td>
        <td><%= link_to t('links.show'), room %></td>
        <td><%= link_to t('links.edit'), edit_room_path(room) %></td>
        <td><%= link_to t('links.destroy'), room, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

